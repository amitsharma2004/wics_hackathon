{
  "user_endpoints": {
    "register": {
      "method": "POST",
      "url": "http://localhost:3000/api/users/register",
      "body": {
        "name": "John Doe",
        "email": "john.doe@college.edu",
        "password": "password123"
      }
    },
    "login": {
      "method": "POST",
      "url": "http://localhost:3000/api/users/login",
      "body": {
        "email": "john.doe@college.edu",
        "password": "password123"
      }
    },
    "refresh_token": {
      "method": "POST",
      "url": "http://localhost:3000/api/users/refresh-token",
      "body": {
        "refreshToken": "YOUR_REFRESH_TOKEN_HERE"
      }
    },
    "get_user": {
      "method": "GET",
      "url": "http://localhost:3000/api/users/me",
      "headers": {
        "Authorization": "Bearer YOUR_ACCESS_TOKEN_HERE"
      }
    },
    "update_profile": {
      "method": "PUT",
      "url": "http://localhost:3000/api/users/profile",
      "headers": {
        "Authorization": "Bearer YOUR_ACCESS_TOKEN_HERE"
      },
      "body": {
        "name": "John Updated",
        "email": "john.updated@college.edu"
      }
    },
    "logout": {
      "method": "POST",
      "url": "http://localhost:3000/api/users/logout",
      "headers": {
        "Authorization": "Bearer YOUR_ACCESS_TOKEN_HERE"
      }
    }
  },
  "ride_endpoints": {
    "create_ride": {
      "method": "POST",
      "url": "http://localhost:3000/api/rides",
      "headers": {
        "Authorization": "Bearer YOUR_ACCESS_TOKEN_HERE"
      },
      "body": {
        "pickupLocation": {
          "coordinates": [77.2090, 28.6139],
          "address": "Connaught Place, New Delhi, Delhi 110001"
        },
        "destination": {
          "coordinates": [77.2167, 28.6358],
          "address": "India Gate, New Delhi, Delhi 110001"
        },
        "pickupTime": "2026-02-15T10:00:00.000Z",
        "amount": 150
      }
    },
    "get_user_rides": {
      "method": "GET",
      "url": "http://localhost:3000/api/rides",
      "headers": {
        "Authorization": "Bearer YOUR_ACCESS_TOKEN_HERE"
      }
    },
    "get_ride_by_id": {
      "method": "GET",
      "url": "http://localhost:3000/api/rides/RIDE_ID_HERE",
      "headers": {
        "Authorization": "Bearer YOUR_ACCESS_TOKEN_HERE"
      }
    },
    "cancel_ride": {
      "method": "PATCH",
      "url": "http://localhost:3000/api/rides/RIDE_ID_HERE/cancel",
      "headers": {
        "Authorization": "Bearer YOUR_ACCESS_TOKEN_HERE"
      }
    }
  },
  "sample_users": [
